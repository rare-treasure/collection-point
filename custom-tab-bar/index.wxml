<!--pages/tab-bar/tabbar.wxml-->
<wxs src="../app.wxs" module="app"></wxs>

<van-tabbar active-color="#3F8FFF" inactive-color="#8a8a8a" class="tab-bar" active="{{ active }}" bind:change="onChange">
  <van-tabbar-item wx:for="{{ otherConfList }}" wx:key="index" icon="{{item.icon ? '' : 'home-o'}}">
    <image
      wx:if="item.icon"
      slot="icon"
      src="{{ app.getIconPath(iconPath, item.icon) }}"
      mode="aspectFit"
      style="width: 50rpx; height: 42rpx;"
    />
    <image
      wx:if="item.icon || item.iconActive"
      slot="icon-active"
      src="{{ app.getIconPath(iconPath, item.iconActive || item.icon) }}"
      mode="aspectFit"
      style="width: 50rpx; height: 42rpx;"
    />
    <text>{{item.name}}</text>
  </van-tabbar-item>
</van-tabbar>
