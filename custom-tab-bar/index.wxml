<!--pages/tab-bar/tabbar.wxml-->

<van-tabbar active="{{ active }}" bind:change="onChange">
  <van-tabbar-item active-color="#3F8FFF" wx:for="{{ otherConfList }}" wx:key="index" icon="{{item.icon ? '' : 'home-o'}}">
    <image
      wx:if="item.icon"
      slot="icon"
      src="../assets/icons/{{ item.icon }}"
      mode="aspectFit"
      style="width: 50px; height: 22px;"
    />
    <image
      wx:if="item.icon || item.iconActive"
      slot="icon-active"
      src="../assets/icons/{{ item.iconActive || item.icon }}"
      mode="aspectFit"
      style="width: 50px; height: 22px;"
    />
    {{item.name}}
  </van-tabbar-item>
</van-tabbar>
