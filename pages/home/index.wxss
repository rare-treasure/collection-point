/** page/use/index.wxss **/

.home-toolbox {
  height: 100rpx;
  background: #fff;
  width: calc(100vw - 90rpx);
  margin: 30rpx auto 0;
  border-radius: 10rpx;
  padding: 18rpx 0;
  padding-left: 60rpx;
  box-sizing: border-box;
}

.home-toolbox__item {
  height: 64rpx;
}

.home-toolbox__item text {
  margin-left: 16rpx;
}

.home-toolbox__item .van-image {
  margin-top: 12rpx;
}

.home-toolbox__item:nth-of-type(2) {
  padding-left: 60rpx;
  margin-left: 80rpx;
  border-left: 1px dotted #ccc;
}